{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "target": "ES2019",
    "module": "esnext",
    "jsx": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}